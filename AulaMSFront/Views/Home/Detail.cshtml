@model ProductModel

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="pt-4" >
        <div class="card container" style="border: 1px solid #808080; ">
            <div class="card-header text-light row" style="border-radius 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-dark">
                        @Model.Name
                    </h1>
                </div>
                <div class="col-12 col-md-6">
                    <h1 class="text-dark">
                        @Model.Price.ToString("C")
                    </h1>
                </div>
            </div>
            <div class="card-body text-light row" style="border-radius 0px;">
                <div >
                    <div class ="col-12 col-lg-4 p-1 text-center">
                        <div>
                            <img src="@Model.ImageUrl" class="rounded" alt="Imagem do Produto" style="max-height: 300px; max-width: 300px;" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-8 ">
                        <div class="row pl-3">  
                            <div class="col-12">
                                <span class="badge badge-primary text-success p-3 border">
                                    @Model.CategoryName
                                </span>
                                <h3 class="text-suc">

                                </h3>
                                <p class="text-success"">
                                    @Html.Raw(Model.Description)
                                </p>
                            </div>
                        </div>
                        <div class="row px-4">
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-light row" style="border-radius 0px;">
                <td class="col-12 col-md-6 pb-1">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i>Editar
                    </a>
                </td>
                <td class="col-12 col-md-6">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i>Delete
                    </a>
                </td>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}